{
  "compilerOptions": {
    "module": "commonjs",                     
    "strict": true,                          
     "strictPropertyInitialization": false,  
    "baseUrl": "./src",   
    "allowJs": true,                    
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },                           
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  }
}
